# ============================================
# QA Base - Environment Variables
# ============================================
# Copy this file to .env and configure the values
# For Coolify: Set these variables in the Coolify dashboard

# ============================================
# Application Settings
# ============================================
DEBUG=false
APP_NAME=QA Base API

# ============================================
# Database Settings
# ============================================
# SQLite database URL (default location)
DATABASE_URL=sqlite:///./data/app.db

# ============================================
# LLM API Keys (REQUIRED)
# ============================================
# Google Gemini API key for plan generation
GEMINI_API_KEY=your_gemini_api_key_here

# Browser automation API key
BROWSER_USE_API_KEY=your_browser_use_api_key_here

# ============================================
# Celery / Redis Settings
# ============================================
# Redis connection for Celery message broker
CELERY_BROKER_URL=redis://redis:6379/0

# Redis connection for Celery result backend
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# Frontend Settings
# ============================================
# Backend API URL for frontend to connect to
# In production, set this to your actual backend URL
VITE_API_URL=http://localhost:8000
